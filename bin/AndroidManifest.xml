<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zjk.wlo"
    android:versionCode="1"
     android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="9" />
   

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="LoginActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity android:name="UpdateActivity"
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name="CheckTableActivity"
             android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name="MainMenuActivity"
             android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name="OrderActivity"
             android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:name="PayActivity"
             android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        
        <provider android:name="com.zjk.provider.TableProvider" android:authorities="com.amaker.provider.TABLES"/>
		<provider android:name="com.zjk.provider.MenuProvider" android:authorities="com.amaker.provider.MENUS"/>
        
    </application>
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

</manifest>